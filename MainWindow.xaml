<Window x:Class="Personas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Personas"
        mc:Ignorable="d"
        Title="Personas" Height="450" Width="800">
    <DockPanel>
        <StackPanel Orientation="Horizontal"
                    DockPanel.Dock="Top">
            <Button Command="{Binding Path=NuevaPersonaCommand}">Nueva persona</Button>
            <Button Command="{Binding Path=MostrarPersonasCommand}">Listado de personas</Button>
        </StackPanel>
        <Border BorderBrush="Black"
                BorderThickness="3"
                Margin="5">
            <ContentControl Content="{Binding Path=ContenidoVista}">

            </ContentControl>
        </Border>
        
    </DockPanel>
</Window>
