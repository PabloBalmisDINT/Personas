<UserControl x:Class="Personas.NuevaPersonaUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Personas"
             mc:Ignorable="d" 
             d:DesignHeight="450" 
             d:DesignWidth="800">
    <StackPanel>
        <TextBlock>Nombre:</TextBlock>
        <TextBox></TextBox>
        <TextBlock>Edad:</TextBlock>
        <TextBox></TextBox>
        <TextBlock>Nacionalidad</TextBlock>
        <StackPanel Orientation="Horizontal">
            <ComboBox Width="150"
                      HorizontalAlignment="Left"></ComboBox>
            <Button Command="{Binding Path=NuevaNacionalidadCommand}">+</Button>
        </StackPanel>
        
        <Button Width="100">Aceptar</Button>
    </StackPanel>
</UserControl>
